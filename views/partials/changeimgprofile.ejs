<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade text-dark" id="changeimgprofile" tabindex="-1" aria-labelledby="changeimgprofilelabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <form class="modal-content" action="/<%= user._id.toString() %>" method="post">
      <div class="modal-header">
        <h5 class="modal-title" id="changeimgprofilelabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-floating">

          <input type="url" name="changeimgprofileurl" class="form-control h-50" placeholder="Leave a comment here"
            id="changeimgprofileurl">
          <label for="changeimgprofileurl">url nuova immagine</label>

        </div>
      </div>
      <div class="modal-footer position-absolute">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </form>
  </div>
</div>