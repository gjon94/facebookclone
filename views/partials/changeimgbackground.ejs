<!-- Modal img background-->
<div class="modal fade text-dark" id="changeimgbackground" tabindex="-1" aria-labelledby="changeimgbackgroundlabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <form class="modal-content" action="/<%= user._id.toString() %>" method="post">
        <div class="modal-header">
          <h5 class="modal-title" id="changeimgbackgroundlabel"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="form-floating">
  
            <input type="url" name="changeimgbackgroundurl" class="form-control h-50" placeholder="Leave a comment here"
              id="changeimgbackgroundurl">
            <label for="changeimgbackgroundurl">url nuova copertina</label>
  
          </div>
        </div>
        <div class="modal-footer position-absolute">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>