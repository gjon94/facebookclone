<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <link rel="icon" href="data:,">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="./js/script.js"></script>

  <title>Hello, world!</title>
</head>

<body class="bg-dark bg-gradient text-white" style="height: 100vh;">




  <div class="container-fluid  text-center">

    <!-- containercoverIMG -->
    <div class="container position-relative">

      <div class="container">
        <img class="w-100" src="<%= foundUser.imgBackground %>" alt="" style="aspect-ratio: 2/1;max-height: 55vh;">
      </div>


      <!-- containerUserIMG -->
      <div
        class="container position-absolute bottom-0 start-50 translate-middle-x rounded-circle d-flex align-items-center justify-content-center overflow-hidden"
        style="height: 150px; width: 150px;">
        <img class="rounded-circle" src="<%= foundUser.imgProfile %>" alt="" style="height: 150%; width: 150%;">
      </div>


    </div>
    <h1>
      <%= foundUser.name +' '+foundUser.surname %></h1>

  </div>


  <div class="text-center">
  <% if(hasSendRequest==='add'){%>
      <button type="button" class="btn btn-outline-success"onclick="addFriend('<%= foundUser._id %>')">invia richiesta</button> 
        <%}%>

        


<% if(hasSendRequest==='cancell'){%>
 <button type="button" class="btn btn-outline-success"onclick="removeMyRequestFriend('<%= foundUser._id %>')">annulla richiesta</button>  
    <%}%>

    

    <% if(hasSendRequest==='choose'){%>
     

      <input type="button" onclick="acceptRefuseRequestFriend('<%=foundUser._id %>',true)" value="accetta">
                <input type="button" onclick="acceptRefuseRequestFriend('<%= foundUser._id %>',false)" value="rifiuta">
         <%}%>

</div>




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</body>

</html>



