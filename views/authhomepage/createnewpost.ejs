<div  class="d-flex  gap-2 p-2 mt-4 bg-dark bg-gradient">

    <a href="#"><img class="rounded-circle" style="height: 35px;width: 35px;object-fit: cover;"
            src="<%= user.imgProfile %>" alt=""></a>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-secondary rounded-pill text-start w-100" data-bs-toggle="modal"
        data-bs-target="#exampleModal">
        A cosa stai pensando?
    </button>

    <!-- Modal -->
    <div class="modal fade text-dark" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <form class="modal-content" method="post" action="/<%= user._id.toString() %>">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Crea un post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">



                    <div class="form-floating">

                        <textarea name="content" class="form-control h-50" placeholder="Leave a comment here"
                            id="content"></textarea>
                        <label for="content">Descrizione</label>

                    </div>


                    <div class="form-floating mt-3">

                        <input name="img" type="url" class="form-control" placeholder="Leave a comment here"
                            id="img" >
                        <label for="img">url img</label>
                       

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" >Save
                        changes</button>
                </div>
                
            </form>
        </div>
    </div>


    

</div>